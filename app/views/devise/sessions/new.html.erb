<div class="row">
  <div class="col-md-12">
    <div class="well">
      <legend>Sign In</legend>
      <form accept-charset="UTF-8" action="/users/sign_in" class="new_user form-horizontal" id="new_user" method="post">
        
        <div style="margin:0;padding:0;display:inline">
          <input name="utf8" type="hidden" value="&#x2713;" />
          <input name="authenticity_token" type="hidden" value="WEPNrbOc2+awRN04Wxnyl9gxzuQ4udMVIdwqAEwq1BY=" />
        </div>

        <div>
          <label for="user_username">Username</label>
          <br>
          <input autofocus="autofocus" id="user_username" name="user[username]" size="30" class="form-control devise-form" type="text" />
        </div>
        <br>

        <div>
          <label for="user_password">Password</label>
          <br>
          <input id="user_password" name="user[password]" size="30" class="form-control devise-form" type="password" />
        </div>
        <br>

        <div>
          <input name="user[remember_me]" type="hidden" value="0" />
          <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
          <label for="user_remember_me">Remember me</label>
        </div>
        <br>

        <div><input name="commit" class="button btn-success" type="submit" value="Sign in" /></div>
      </form>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>